
<%- include("partials/header") %>

<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">List Category</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">List Category</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div  class="col-md-12"
            <!-- general form elements disabled -->
            <div class="card card-dark">
                <div class="card-header">
                  <h3 class="card-title">List Category</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tbl-list-category" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                          <th>#ID</th>
                          <th>Name</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% categories.forEach(function(data,i){ %>
                            <tr>
                              <td><%= i + 1 %></td>
                              <td><%= data.name %></td>
                              <td>
                                <% if(data.status == '1'){%>
                                  <button class="btn btn-success">Active</button>
                                <%}else{%>
                                  <button class="btn btn-danger">Inactive</button>
                                <%} %>
                              </td>
                              <td class="d-flex">
                                <a href="/admin/edit-category/<%= data.id %>" class="btn btn-primary mx-2"><i class="fa fa-edit"></i></a>

                                <form method="post" action="/admin/delete-category" id="frm-delete-category-<%= data.id %>">
                                  <input type="hidden" value="<%= data.id %>" name="category_id"/>
                                </form>

                                <a href="javascript:void(0)" onclick="if(confirm('Are you sure want to delete ?')){$('#frm-delete-category-<%= data.id %>').submit()}" class="btn btn-danger mx-2"><i class="fa fa-trash"></i></a>
                              </td>
                            </tr>
                          <%})%>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#ID</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                      </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("partials/footer") %>